<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/gradient"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <EditText
            android:id="@+id/pname"
            android:drawableLeft="@drawable/patientname"
            android:drawablePadding="10dp"
            android:layout_margin="10dp"
            android:hint="Enter the Patient Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/address"
            android:drawableLeft="@drawable/address"
            android:drawablePadding="10dp"
            android:layout_margin="10dp"
            android:hint="Enter the Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/pnum"
            android:drawableLeft="@drawable/phone"
            android:drawablePadding="10dp"
            android:layout_margin="10dp"
            android:hint="Enter the Phone Number"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/email"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="10dp"
            android:layout_margin="10dp"
            android:hint="Enter the Email Id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/symptoms"
            android:drawableLeft="@drawable/symptoms"
            android:drawablePadding="10dp"
            android:layout_margin="10dp"
            android:hint="Enter the Symptoms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
       <androidx.appcompat.widget.AppCompatButton
          android:onClick="submit"
           android:background="@drawable/buttonshape1"
           android:textSize="20dp"
           android:textColor="#4510A3"
           android:layout_margin="40dp"
           android:text="SUBMIT"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>
